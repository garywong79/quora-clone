<div class="container">
	<div class="row">
		<div class ="col-md-2">
			<img class="img-responsive" src="http://www.draplin.com/pics/gary_logo_13.gif" alt="logo">
		</div>	

		<div class="form-inline col-md-8">
			<% if @question && !@question.errors.empty? %>
				<% @question.errors.full_messages.each do |e| %>
					<p><%= e %></p>
				<% end %>
			<% end %>
			<form method="post"  action="/questions">
  			<div class="form-group">
	   			<input type=text placeholder class="form-control" placeholder="Ask Gary" <%="#{@user.id}"%> name="question[question_detail]">
  			</div>
  			<button type="submit" class="btn btn-default">Add It</button>
			</form>
		</div>

		<div class="col-md-2 text-rigth text-uppercase">
			<h1><%="#{@user.name}"%></h1>
		</div>
	</div>

	<div class="row">
		<hr>
	</div>
	<div class="row">
		<div class = "col-md-12">
			<form method="post" action="/logout">
				<input type=submit value="Log out">
			</form>
		</div>
	</div>
	<div class="row">
		<div class = "col-md-12">
			<h2>List of Questions</h2>
	
		<dl class='dl-horizontal'>
			<%@questions.each do |q|%>
				<dt><a href= "/questions/<%=q.id%>"><%=q.question_detail%></a></dt>
				<dd><a href= "<%=q.user.name%></dd>"><%=q.user.name%></a></dd>
				<hr>
			<%end%>
		</dl>
		</div>
	</div>
</div>

